<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-md-7">
      <div class="card rounded-0 mb-5">
        <div class="card-body">
          <h4 class="text-muted font-weight-bold">About Company</h4>
          <h6 class="font-14 lh-18"><%= @company.about %></h6>
        </div>
      </div>
      <%= render "partials/contact_form", company: @company %>
    </div>
    <div class="col-md-5">
      <% if @company.job_posts.present? %>
        <div class="card rounded-0">
          <div class="card-body">
            <h4 class="text-muted font-weight-bold mb-4">Company Job Posts</h4>
            <div class="list-group">
              <% @company.job_posts.each do |job_post| %>
                <%= link_to job_post.job_title, job_post, class: "list-group-item list-group-item-action" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
