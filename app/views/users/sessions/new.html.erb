<div class="text-center">  
  <p class="lead">Are you existing user? </p>
  <h2 class="text-muted mb-4 mt-2">Log In</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control form-control-lg rounded-0" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control form-control-lg rounded-0" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group text-center">
    <%= f.submit "Log in", class: "btn btn-success btn-lg rounded-0" %>
  </div>
<% end %>
