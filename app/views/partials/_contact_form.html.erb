<div class="card rounded-0 mt-5 mb-5">
  <div class="card-body">
    <h4 class="text-muted font-weight-bold mb-5">Contact with <span class="text-site"><%= company.name %></span></h4>
    <%= form_for :contact, url: :contacts, method: :post do |f| %>
      <%= f.hidden_field :company_id, value: company.id %>
      <div class="form-group row">
        <div class="col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control rounded-0' %>
        </div>
        <div class="col-md-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control rounded-0' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-6">
          <%= f.label :contact_number %>
          <%= f.text_field :contact_number, class: 'form-control rounded-0' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'Your Message' %>
        <%= f.text_area :message, class: 'form-control rounded-0', rows: '6' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit Contact Info', class: 'btn btn-lg-custom btn-block rounded-0 btn-custom btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
